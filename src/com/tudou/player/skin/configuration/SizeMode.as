package com.tudou.player.skin.configuration 
{
	/**
	 * 显示模式
	 * 
	 * @author 8088
	 */
	public class SizeMode 
	{
		/**
		 * 弹出窗
		 */
		public static const POPUP:String = "popUp";
		/**
		 * 窄屏
		 */
		public static const NARROW_SCREEN:String = "narrowScreen";
		/**
		 * 宽屏
		 */
		public static const WIDE_SCREEN:String = "wideScreen";
		
		/**
		 * Specifies that the Stage is in full-screen mode. Keyboard interactivity is disabled in this mode.
		 * @langversion	3.0
		 * @playerversion	Flash 9.0.28.0
		 * @playerversion	Lite 4
		 */
		public static const FULL_SCREEN : String = "fullScreen";

		/**
		 * Specifies that the Stage is in full-screen mode with keyboard interactivity enabled. 
		 * Only AIR applications support this capability.
		 * @langversion	3.0
		 * @playerversion	AIR 1.0
		 * @playerversion	Lite 4
		 */
		public static const FULL_SCREEN_INTERACTIVE : String = "fullScreenInteractive";

		/**
		 * Specifies that the Stage is in normal mode.
		 * @langversion	3.0
		 * @playerversion	Flash 9.0.28.0
		 * @playerversion	Lite 4
		 */
		public static const NORMAL : String = "normal";
		
	}

}